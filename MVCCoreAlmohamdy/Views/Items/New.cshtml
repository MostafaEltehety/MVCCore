@model Item


<form method="post" enctype="multipart/form-data">
           <div  class="card border-success mb-3 p-3 mt-4"  >
        <div class="row pb-2">
            <h2 class="text-success">Add New Item</h2>
             <div asp-validation-summary="All" class="text-danger"></div>

            <hr />
        </div>
   

        <div class="form-group">
      <label asp-for="Name" class="form-label mt-4"></label>
       <input asp-for="Name" class="form-control"/>
       <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="Price" class="form-label mt-4"></label>
          <div class="input-group">

      <span class="input-group-text">$</span>
       <input   asp-for="Price" class="form-control"/>
      <span class="input-group-text">.00</span>

    </div>
             <span asp-validation-for="Price" class="text-danger"></span>

    </div>

       <div class="form-group">
      <label asp-for="CategoryId" class="form-label mt-4"></label>
       <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
           <option value="0">Select Category</option>
            
       </select>
       <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

     <div class="form-group">
  <label class="col-form-label mt-4" asp-for="ImgPath">Image</label>
  <input type="file" class="form-control" asp-for="FormFile"  placeholder="Chose Image" onchange="loadFile(event)">
  <br /><br />
  <img id="MyImg" height="200" />
</div>

  <br /> 
  <br />
  <div class="form-group text-end">
        <button type="submit" class="btn btn-outline-success">Save</button>
        <a  asp-action="Index" class="btn btn-outline-secondary">Back to items</a>
  </div>
      
    </div>
</form>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
    var loadFile=function(event){
        var reader=new FileReader();
        reader.onload=function(){
          var Img=  document.getElementById("MyImg");
            Img.src=reader.result;
        }
        reader.readAsDataURL(event.target.files[0]);
    }
    </script>

}