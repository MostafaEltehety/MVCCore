 @model  IEnumerable<Item>;

     <div class="container p-4">
         <div class="row pt-3">
             <div class="col-6">
                 <h2 class="text-info">Items Views</h2>
             </div>
              <div class="col-6 text-end">

                  <a asp-controller="Items" class="btn btn-success btn-sm" asp-action="New">
                     <i class="bi bi-plus-circle"></i> Add New Items</a>
             </div>
         </div>
     </div>

     <partial name="_Notification"/>

     <table class="table table-primary table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price $</th>
      <th>Category</th>
     <th>Image</th>
     <th></th>
    </tr>
  </thead>
  <tbody>
 @foreach (var item in Model)
 {
     <tr class="table-light">
      <th>@item.Name</th>
      <th>@item.Price</th>
      <th>@item.Category.Name</th>
      <th> 
          <img src="/Upload/Images/@item.ImgPath" width="100" height="100" alt="No Image"/>
      </th>
     <th class="text-end">
         <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill" ></i></a>
         <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>
         <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a>
     </th>
    </tr>
 }
    
  
  </tbody>
</table>